<?xml version="1.0" encoding="utf-8"?>
<layer-list xmlns:android="http://schemas.android.com/apk/res/android">

    <!-- Bottom 2dp Shadow -->
    <item>
        <shape android:shape="rectangle">
            <solid android:color="#4d4d4d"></solid>

        </shape>
    </item>

    <!-- White Top color -->
    <item
        android:bottom="10px"
        android:right="8px">

        <shape android:shape="rectangle">
            <gradient
                android:endColor="#9a9a9a"
                android:startColor="#c7c7c7"
                android:angle="270"></gradient>
        </shape>

    </item>


</layer-list>