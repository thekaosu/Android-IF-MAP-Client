<?xml version="1.0" encoding="utf-8"?><!-- main tab -->

<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/status_tab"
    android:layout_width="fill_parent"
    android:layout_height="wrap_content"
    android:fillViewport="true">

    <LinearLayout
        android:id="@+id/statusTabLayout"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <!-- Device Properties -->
        <ListView
            android:id="@+id/status_ListView"
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:minHeight="?android:attr/listPreferredItemHeight"
            android:textAppearance="?android:attr/textAppearanceLarge"
            android:layout_weight="1"/>

        <!-- Location properties -->
        <TextView
            android:id="@+id/LongitudeLabel_TextView"
            android:layout_width="1dip"
            android:layout_height="1dip"
            android:textStyle="bold"
            android:visibility="invisible"/>

        <TextView
            android:id="@+id/LatitudeLabel_TextView"
            android:layout_width="1dip"
            android:layout_height="1dip"
            android:textStyle="bold"
            android:visibility="invisible"/>

        <TextView
            android:id="@+id/AltitudeLabel_TextView"
            android:layout_width="1dip"
            android:layout_height="1dip"
            android:textStyle="bold"
            android:visibility="invisible"/>

        <!--ListView android:id="@+id/status_ListView2"
            android:layout_width="fill_parent" android:layout_height="180dip"
            android:minHeight="?android:attr/listPreferredItemHeight"
            android:textAppearance="?android:attr/textAppearanceLarge"></ListView -->

        <!-- update all button -->
        <Button
            android:id="@+id/UpdateStatus_Button"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:onClick="updateStatusButtonHandler"
            android:text="@string/status_lable_update_status"
            android:textStyle="bold"
            android:layout_weight="0"/>

    </LinearLayout>


</LinearLayout>
