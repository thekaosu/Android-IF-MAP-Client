<?xml version="1.0" encoding="utf-8"?><!-- main tab -->

<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/status_tab"
    android:layout_width="fill_parent"
    android:layout_height="wrap_content"
    android:fillViewport="true"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginBottom="0dp"
        android:layout_marginLeft="5dp"
        android:layout_marginRight="5dp"
        android:layout_marginTop="5dp"
        android:layout_weight="1"
        android:background="@color/backgroundIceLight"
        android:fillViewport="true"
        android:orientation="vertical">
        <!-- Device Properties -->
        <ListView
            android:id="@+id/status_ListView"
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:minHeight="?android:attr/listPreferredItemHeight"
            android:textAppearance="?android:attr/textAppearanceLarge" />

        <!-- Location properties -->
        <TextView
            android:id="@+id/LongitudeLabel_TextView"
            android:layout_width="1dip"
            android:layout_height="1dip"
            android:textStyle="bold"
            android:visibility="invisible" />

        <TextView
            android:id="@+id/LatitudeLabel_TextView"
            android:layout_width="1dip"
            android:layout_height="1dip"
            android:textStyle="bold"
            android:visibility="invisible" />

        <TextView
            android:id="@+id/AltitudeLabel_TextView"
            android:layout_width="1dip"
            android:layout_height="1dip"
            android:textStyle="bold"
            android:visibility="invisible" />

    </LinearLayout>
    <!-- update all button -->
    <Button
        android:id="@+id/UpdateStatus_Button"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_weight="0"
        android:onClick="updateStatusButtonHandler"
        android:text="@string/status_lable_update_status"
        android:textStyle="bold" />

</LinearLayout>

