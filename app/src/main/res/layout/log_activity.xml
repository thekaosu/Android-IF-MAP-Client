<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/log_tab"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/custom_header">

        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="3dp"
            android:onClick="exportLogEntrys"
            android:text="@string/log_tab_label_export" />

        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="3dp"
            android:onClick="removeAllLogEntrys"
            android:text="@string/log_tab_label_removeall" />
    </LinearLayout>

    <ListView
        android:id="@+id/logMessages_ListView"
        android:layout_width="fill_parent"
        android:layout_height="fill_parent" />
</LinearLayout>