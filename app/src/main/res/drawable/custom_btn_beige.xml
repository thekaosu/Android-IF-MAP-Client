<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android" >
    <item android:state_pressed="true" >
        <shape android:shape="rectangle"  >
            <corners android:radius="3dip" />
            <stroke android:width="1dip" android:color="#606060" />
            <gradient  android:angle="-90"  android:startColor="#878787" android:endColor="#adadad"  />
        </shape>
    </item>
    <item android:state_focused="true">
        <shape android:shape="rectangle"  >
            <corners android:radius="3dip" />
            <stroke android:width="1dip" android:color="#0c5461" />
            <solid  android:color="#a9ffe5"/>
        </shape>
    </item>
    <item >
        <shape android:shape="rectangle"  >
            <corners android:radius="3dip" />
            <stroke android:width="1dip" android:color="#606060" />
            <gradient  android:angle="270"  android:startColor="#D3D3D3" android:endColor="#a8a8a8" />
        </shape>
    </item>
</selector>